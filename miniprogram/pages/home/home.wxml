<!--pages/home/home.wxml-->
<!--轮播图区-->
<swiper indicator-dots="{{indicators}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular>
  <block wx:for="{{imageUrl}}" wx:key="index">
    <swiper-item>
      <image src="{{item}}" mode="aspectFit" class="swiper-image"></image>
    </swiper-item>
  </block>
</swiper>


<!--项目列表区-->
<navigator open-type="navigateTo" url="/pages/project_list/project_list?project_neme={{item.project_neme}}&project_id={{item._id}}"
class="row" wx:for="{{dataList}}" wx:key="index"
>
  <view class="title">项目名称：{{item.project_neme}}</view>
  <view>项目负责人：{{item.project_leader[1]}}</view>
  <view>项目第一指导老师：{{item.project_teather[1]}}</view>
  <view>项目学院：{{item.project_college}}</view>
</navigator>

